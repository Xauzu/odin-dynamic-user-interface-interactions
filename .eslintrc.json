{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base",
        "prettier"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "ignorePatterns": ["dist/*.js"],
    "rules": {
        "no-plusplus": ["error", { "allowForLoopAfterthoughts": true }]
    }
}
